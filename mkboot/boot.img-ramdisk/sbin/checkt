#/sbin/busybox ash
echo "current cpu temp: "`cat /sys/devices/platform/omap/omap_temp_sensor.0/temperature`
echo "# of times you were throttled recently: "`dmesg | /sbin/busybox grep -c "too high"`
echo
CPU=`dmesg | /sbin/busybox grep "trim_val" | /sbin/busybox cut -d \] -f 3`
[ "$CPU" ] && echo "CPU Type:$CPU" || echo "CPU Type unknown - run this script just after boot" 
